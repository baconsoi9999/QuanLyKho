<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    app:layout_constraintVertical_chainStyle="packed">

    <TextView
        android:id="@+id/txtv_addvt_tenvt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Ten Vat Tu"

        app:layout_constraintBottom_toTopOf="@id/txtv_addvt_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_addvt_tenvt"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edit_addvt_tenvt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/txtv_addvt_tenvt"
        app:layout_constraintBottom_toBottomOf="@id/txtv_addvt_tenvt"
        app:layout_constraintLeft_toRightOf="@id/txtv_addvt_tenvt"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txtv_addvt_price"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Don gia goc"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtv_addvt_tenvt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_addvt_price"/>
    <EditText
        android:id="@+id/edit_addvt_price"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/txtv_addvt_price"
        app:layout_constraintBottom_toBottomOf="@id/txtv_addvt_price"
        app:layout_constraintLeft_toRightOf="@id/txtv_addvt_price"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnOk"
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtv_addvt_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>